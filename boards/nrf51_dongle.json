{
  "build": {
    "arduino":{
      "ldscript": "nrf51_xxac.ld"
    },
    "core": "nRF5",
    "cpu": "cortex-m0",
    "extra_flags": "-DARDUINO_GENERIC",
    "f_cpu": "32000000L",
    "mcu": "nrf51822",
    "variant": "nRF51Dongle",
    "zephyr": {
       "variant": "nrf51_pca10031"
    }
  },
  "connectivity": [
    "bluetooth"
  ],
  "debug": {
    "default_tools": [
      "jlink"
    ],
    "jlink_device": "nRF51822_xxAC",
    "onboard_tools": [
      "cmsis-dap",
      "jlink"
    ],
    "svd_path": "nrf51.svd"
  },
  "frameworks": [
    "arduino",
    "mbed",
    "zephyr"
  ],
  "name": "Nordic nRF51 Dongle (PCA10031)",
  "upload": {
    "maximum_ram_size": 32768,
    "maximum_size": 262144,
    "protocol": "jlink",
    "protocols": [
      "cmsis-dap",
      "jlink",
      "nrfjprog",
      "mbed"
    ]
  },
  "url": "https://developer.mbed.org/platforms/Nordic-nRF51-Dongle/",
  "vendor": "Nordic"
}
