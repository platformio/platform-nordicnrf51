{
  "build": {
    "core": "nRF5",
    "cpu": "cortex-m0",
    "extra_flags": "-DARDUINO_BBC_MICROBIT -DUSE_LFRC",
    "f_cpu": "16000000L",
    "ldscript": "nrf51_xxaa.ld",
    "mcu": "nrf51822",
    "variant": "BBCmicrobit",
    "zephyr": {
       "variant": "bbc_microbit"
    }
  },
  "connectivity": [
    "bluetooth"
  ],
  "debug": {
    "onboard_tools": [
      "cmsis-dap"
    ],
    "svd_path": "nrf51.svd",
    "jlink_device": "nRF51822_xxAA"
  },
  "frameworks": [
    "arduino",
    "mbed",
    "zephyr"
  ],
  "name": "BBC micro:bit",
  "upload": {
    "maximum_ram_size": 16384,
    "maximum_size": 262144,
    "protocol": "cmsis-dap",
    "protocols": [
      "cmsis-dap",
      "mbed",
      "jlink"
    ]
  },
  "url": "https://developer.mbed.org/platforms/Microbit/",
  "vendor": "BBC"
